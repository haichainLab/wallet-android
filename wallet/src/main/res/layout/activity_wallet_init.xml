<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:paddingTop="@dimen/toolbar_pading_top"
        android:theme="@style/toolbar_style">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:text="@string/import_"
            android:textColor="@color/C6"
            android:textSize="12sp" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:scrollbars="none"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/input_seed_hint"
                style="@style/text_init_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/pls_input_seed" />

            <EditText
                android:id="@+id/seed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="@string/pls_input_seed"
                android:imeOptions="actionNext"
                android:textColor="@color/C6"
                android:textColorHint="@color/C7"
                android:textCursorDrawable="@drawable/et_cursor_drawable_blue"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_seed"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="12dp"
                android:background="@color/C8" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <TextView
                style="@style/text_init_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pin_create_wallet_name" />

            <EditText
                android:id="@+id/wallet_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="@string/pls_input_wallet_name"
                android:imeOptions="actionNext"
                android:textColor="@color/C6"
                android:textColorHint="@color/C7"
                android:textCursorDrawable="@drawable/et_cursor_drawable_blue"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_wallet_name"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="12dp"
                android:background="@color/C8" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="21dp" />

            <TextView
                style="@style/text_init_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pin_create_wallet_avatar" />

            <ImageView
                android:id="@+id/wallet_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/avata1" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="21dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_select_wallet_icon"
                android:textColor="@color/C5"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avata1"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata1" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata2"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata2" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata3"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata3" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata4"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata4" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avata5"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata5" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata6"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata6" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata7"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata7" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata8"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata8" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avata9"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata9" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata10"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata10" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata11"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata11" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/avata12"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/avata12" />

                </LinearLayout>
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="21dp" />

            <TextView
                style="@style/text_init_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:visibility="gone" />

            <io.samos.wallet.widget.SamosEditText
                android:id="@+id/wallet_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/C2"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="21dp"

                android:visibility="gone" />

            <TextView
                style="@style/text_init_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/retype_pwd"
                android:visibility="gone" />

            <io.samos.wallet.widget.SamosEditText
                android:id="@+id/wallet_pwd_repeat_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/C2"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:visibility="gone" />

            <TextView
                style="@style/text_init_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_reminder"
                android:visibility="gone" />

            <io.samos.wallet.widget.SamosEditText
                android:id="@+id/wallet_pwd_hint_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/C2"

                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>