<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_edit_radio_bg"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_show_qrcode"
            android:textColor="@color/black"
            android:id="@+id/tx_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/exit" />
    </RelativeLayout>

    <include layout="@layout/layout_default_line" />


        <ImageView
            android:layout_width="200dp"
            android:layout_margin="30dp"
            android:id="@+id/img_qrcode"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_height="200dp" />
    <include layout="@layout/layout_default_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_copy"
            android:layout_centerVertical="true"
            android:background="@mipmap/copy"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_toLeftOf="@id/img_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tx_qr_adress"/>
    </RelativeLayout>
</LinearLayout>