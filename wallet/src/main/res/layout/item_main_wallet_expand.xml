<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:drawableLeft="@drawable/new_wallet"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_new_wallet"
            android:layout_centerVertical="true"
            android:textColor="#909294"
            android:layout_width="wrap_content"
            android:text="@string/new_wallet"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableLeft="@drawable/import_wallet"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_import_wallet"
            android:textColor="#909294"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:text="@string/load_wallet"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>